        // Comment
        {
            "before": ["<leader>", "c"],
            "commands": ["editor.action.commentLine"],
            "when": "editorTextFocus && !editorReadonly"
        },

        // Vscode tab
        {
            "before": ["<tab>"], 
            "commands": ["tab",],
            "silent": true
        },
        {
            "before": ["shift", "<tab>"], 
            "commands": ["outdent",],
            "silent": true
        },

        // Show vscode commands
