        // w to jump over words or sentences with hjkl motions
        {
            "before": ["w", "h"], "after": ["b"]
        },
        {
            "before": ["w", "l"], "after": ["e"]
        },
        {
            "before": ["w", "k"], "after": ["("]
        },
        {
            "before": ["w", "j"], "after": [")"]
        },

        // W HJKL same behaviour but whitespace is word delimeter
        // Note: W KJ jumps in paragraphs and vscode jump line differs from regular vim
        {
            "before": ["W", "H"], "after": ["B"]
        },
        {
            "before": ["W", "L"], "after": ["E"]
        },
        {
            "before": ["W", "K"], "after": ["{"]
        },
        {
            "before": ["W", "J"], "after": ["}"]
        },

        // fl as f and fh as F
        {
            "before": ["f", "l"], "after": ["f"]
        },
        {
            "before": ["f", "h"], "after": ["F"]
        },
        // fj as / and fk as ?
        {
            "before": ["f", "j"], "after": ["/"]
        },
        {
            "before": ["f", "k"], "after": ["?"]
        },

        // tl as t and th as T
        {
            "before": ["t", "l"], "after": ["t"]
        },
        {
            "before": ["t", "h"], "after": ["T"]
        },

    ],

