        {
            "before": ["g", "h"], "after": ["0"]
        },              
        {               
            "before": ["g", "l"], "after": ["$"]
        },              
        {               
            "before": ["g", "k"], "after": ["g", "g"]
        },              
        {               
            "before": ["g", "j"], "after": ["G"]
