{
    "dance.modes": {
        "NORMAL": {
            "cursorStyle": "line-thin",
            "lineNumbers": "relative",
            "decorations": {
                "applyTo": "main",
                "backgroundColor": "$editor.hoverHighlightBackground",
                "isWholeLine": true
            },
            "onEnterMode": [
                [".selections.restore", {"register": " ^", "try": true}]
            ],
            "onLeaveMode": [
                [".selections.save", {"register": " ^"}]
            ]
        },
        "": {
            "hiddenSelectionsIndicatorsDecoration": {
                "after": {
                    "color": "$list.warningForeground"
                },
                "backgroundColor": "$inputValidation.warningBackground",
                "borderColor": "$inputValidation.warningBorder",
                "borderStyle": "solid",
                "borderWidth": "1px",
                "isWholeLine": true
            }
        },
        "input": {
            "cursorStyle": "underline-thin",
        },
        "insert": {
            "onLeaveMode": [
                [".selections.save",{"register": " insert"}]
            ]
        },
        "select": {},
        "normal": {
            "lineNumbers": "relative",
            "decorations": {
                "applyTo": "main",
                "backgroundColor": "$editor.hoverHighlightBackground",
                "isWholeLine": true
            },
            "onEnterMode": [
                [".selections.restore", {"register": " ^", "try": true}]
            ],
            "onLeaveMode": [
                [".selections.save", {
                    "register": " ^", 
                    "style": {
                            "borderColor": "$editor.selectionBackground",
                            "borderStyle": "solid",
                            "borderWidth": "2px",
                            "borderRadius": "1px"
                        },
                        "until": [
                            ["mode-did-change", {"include": "normal"}],
                            ["selections-did-change"]
                        ]
                    }
                ]
            ]
        }
    },
    "dance.defaultMode": "NORMAL",
    "terminal.integrated.defaultProfile.windows": "Git Bash",
    "workbench.iconTheme": "vscode-icons",
    "workbench.startupEditor": "none",
    "window.zoomLevel": -2,
    "python.terminal.executeInFileDir": true,
    "workbench.activityBar.visible": false,
    "vsicons.dontShowNewVersionMessage": true,
}