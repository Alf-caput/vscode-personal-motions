    "vim.normalModeKeyBindings": [
        
        // Spanish <Esc>
        {
            "before" : ["Ñ"], "after" : ["<Esc>"]
        },

        // Show vscode commands
        {
            "before": ["<leader>", ":"], 
            "commands": ["workbench.action.showCommands",],
            "silent": true
        },

        // Show file explorer
        {
            "before": ["<leader>", "e"], 
            "commands": ["workbench.view.explorer",],
        },
        {
            "before": ["<leader>", "e"], 
            "commands": ["workbench.action.toggleSidebarVisibility",],
        },

        // Use vscode undo/redo
        {
            "before" : ["u"], "commands" : ["undo"]
        },
        {
            "before" : ["<C-r>"], "commands" : ["redo"]
        },

        // D same as V or Y
        {
            "before": ["D"], "after": ["d", "d"]
        },

        // Disable old w and g
        {
            "before": ["w"], "after": [""]
        },
        {
            "before": ["W"], "after": [""]
        },

        // Can't have it in pending motions for g (unfortunately)
        {
            "before": ["g", "k"], "after": ["g", "g", "^"]
        },
        {
            "before": ["g", "j"], "after": ["G", "g", "_"]
        },
        {
            "before": ["g", "h"], "after": ["^"]
        },
        {
            "before": ["g", "l"], "after": ["g", "_"]
        },

        // Normal mode pendings commands that involve gg or G
        // Note: Won't work in pending motions by remapping k and j to gg and G
        {
            "before": ["y", "g", "k"], "after": ["y", "g", "g"]
        },
        {
            "before": ["y", "g", "j"], "after": ["y", "G"]
        },
        {
            "before": ["d", "g", "k"], "after": ["d", "g", "g"]
        },
        {
            "before": ["d", "g", "j"], "after": ["d", "G"]
        },
        {
            "before": ["c", "g", "k"], "after": ["c", "g", "g"]
        },
        {
            "before": ["c", "g", "j"], "after": ["c", "G"]
        },

        //█▀ ▄▀█ █▀▄▀█ █▀▀   █▄▀ █▀▀ █▄█ █▄▄ █ █▄░█ █▀▄ █ █▄░█ █▀▀ █▀
