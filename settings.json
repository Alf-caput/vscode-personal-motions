        {
            "before": ["f", "h"], "after": ["F"]
        },
        // fj as / and fk as ?
        {
            "before": ["f", "j"], "after": ["/"]
        },
        {
            "before": ["f", "k"], "after": ["?"]
        },

        // tl as t and th as T
        {
            "before": ["t", "l"], "after": ["t"]
        },
        {
            "before": ["t", "h"], "after": ["T"]
        },

    ],

