            "before": ["g", "k"], "after": ["g", "g", "^"]
        },
        {
            "before": ["g", "j"], "after": ["G", "g", "_"]
        },
        {
            "before": ["g", "h"], "after": ["^"]
        },
        {
            "before": ["g", "l"], "after": ["g", "_"]
        },

